-
	const navLink = ['Home', 'Products', 'Services', 'Resources', 'About', 'Contact us']
-
	const links = ['Disclaimer', 'Legal', 'Environment policy', 'Privacy']
-
	const contacts = ['PHONE:+61 3 9614 4416', 'EMAIL:<span>sales@saltgroup.com.au</span>']
footer.footer
	.layout-position
		.footer__inner
			.twitter-widget.footer__twit-widget
				.twitter-widget__header
					.twitter-widget__logo-wrap.flex-center
						.twitter-widget__logo.flex-center
							img(src="img/Twitter_Icon.png", alt="Twitter")
					.twitter-widget__header-wrap
						.twitter-widget__title @saltgroup
						.twitter-widget__feed Twitter feed
				.twitter-widget__content
				
					a(class="twitter-timeline" href="https://twitter.com/saltgroup" data-height="305") Tweets by saltgroup
			.footer__links
				.footer__links-column
					.footer__links-title Navigation 
					ul.list.footer__links-list
						each item in navLink
							li.list__item
								a.list__link.footer__links-link(href='javascript:void(0)') #{item}
				.footer__links-column
					.footer__links-title Links 
					ul.list.footer__links-list
						each item in links
							li.list__item
								a.list__link.footer__links-link(href='javascript:void(0)') #{item}
				.footer__links-column
					.footer__links-title Contact sales
					ul.list.footer__links-list
						each item in contacts
							li.list__item
								a.list__link.footer__links-link(href='javascript:void(0)') !{item}
